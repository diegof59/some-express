<h1 class="text-center mb-3">{{title}}</h1>
<form action="/api/users" method="POST" class="mb-4">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" name="name" class="form-control">
  </div>
  <div class="form-group">
    <label for="email">Age</label>
    <input type="number" name="age" class="form-control">
  </div>
  <input type="submit" value="Add User" class="btn btn-primary btn-block">
</form>
<h4>Users</h4>
<ul class="list-group">
  {{#each users}}
  <li class="list-group-item">{{this.name}}: {{this.age}}</li>
  {{/each}}
</ul>

<a href="/api/users" class="btn btn-light mt-4">Visit API</a>